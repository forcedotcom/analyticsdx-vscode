{
  "name": "analyticsdx-vscode-templates",
  "displayName": "Salesforce Analytics DX - App Templates",
  "description": "Provides support for editing analytics application template files",
  "qna": "https://github.com/forcedotcom/analyticsdx-vscode/issues",
  "bugs": {
    "url": "https://github.com/forcedotcom/analyticsdx-vscode/issues"
  },
  "repository": {
    "url": "https://github.com/forcedotcom/analyticsdx-vscode"
  },
  "icon": "images/VSCodeAnalyticsTemplates.png",
  "galleryBanner": {
    "color": "#ECECEC",
    "theme": "light"
  },
  "version": "1.0.0",
  "publisher": "salesforce",
  "license": "BSD-3-Clause",
  "engines": {
    "vscode": "^1.38.0"
  },
  "categories": [
    "Other"
  ],
  "dependencies": {
    "@salesforce/salesforcedx-utils-vscode": "46.3.0",
    "jsonc-parser": "2.1.0",
    "lodash.isequal": "^4.5.0",
    "picomatch": "2.0.7",
    "request-light": "0.2.4",
    "vscode-extension-telemetry": "0.0.17",
    "vscode-languageclient": "^5.3.0-next.6"
  },
  "devDependencies": {
    "@salesforce/analyticsdx-test-utils-vscode": "1.0.0",
    "@types/chai": "^4.0.0",
    "@types/lodash.isequal": "^4.5.5",
    "@types/mocha": "2.2.38",
    "@types/node": "10.11.0",
    "@types/open": "6.0.0",
    "@types/sinon": "^2.3.2",
    "@types/tmp": "0.1.0",
    "@types/vscode": "1.38.0",
    "@types/which": "^1.3.1",
    "ajv": "6.10.2",
    "chai": "^4.0.2",
    "cross-env": "5.2.0",
    "mocha": "^3.2.0",
    "mocha-junit-reporter": "^1.13.0",
    "mocha-multi-reporters": "^1.1.4",
    "nyc": "^13",
    "readdirp": "3.1.1",
    "shx": "0.2.2",
    "sinon": "^2.3.6",
    "tmp": "0.1.0",
    "typescript": "3.5.2"
  },
  "scripts": {
    "vscode:prepublish": "npm prune --production",
    "vscode:package": "vsce package",
    "vscode:sha256": "node ../../scripts/generate-sha256.js >> ../../SHA256",
    "vscode:publish": "node ../../scripts/publish-vsix.js",
    "compile": "tsc -p ./ && shx cp -R test/unit/schema/testfiles out/test/unit/schema",
    "lint": "tslint --project . --exclude '**/*.json'",
    "watch": "tsc -watch -p .",
    "clean": "shx rm -rf .vscode-test && shx rm -rf node_modules && shx rm -rf out && shx rm -rf coverage && shx rm -rf .nyc_output && shx rm -f analyticsdx-vscode-templates-*.vsix && shx rm -f junit-custom-vscodeIntegrationTests.xml xunit-vscodeIntegrationTests.xml",
    "pretest": "npm run compile",
    "test": "npm run test:unit && npm run test:vscode-integration",
    "test:unit": "./node_modules/.bin/nyc ./node_modules/.bin/_mocha --recursive out/test/unit --delay --reporter mocha-multi-reporters --timeout 20000 --reporter mocha-multi-reporters --reporter-options configFile=../../config/mochaUnitTestsConfig.json",
    "setup-vscode-integration": "node ../../scripts/link-vscode-integration-dependency analyticsdx-vscode-core analyticsdx-vscode-templates && node ../../scripts/download-vscode-for-tests && node ../../scripts/install-vsix-dependency salesforce.salesforcedx-vscode-core",
    "test:vscode-integration": "npm run setup-vscode-integration && node ../../scripts/run-vscode-integration-tests",
    "test:vscode-insiders-integration": "cross-env CODE_VERSION=insiders npm run test:vscode-integration"
  },
  "extensionDependencies": [
    "salesforce.analyticsdx-vscode-core"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./out/src",
  "contributes": {
    "jsonValidation": [
      {
        "fileMatch": "template-info.json",
        "url": "./schemas/template-info-schema.json"
      }
    ]
  }
}
