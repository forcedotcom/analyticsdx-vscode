    "customAttributes": {
      "type": ["null", "array"],
      "description": "Define custom meta data attributes for the template.",
      "minItems": 0,
      "examples": [[]],
      "items": {
        "type": "object",
        "additionalProperties": false,
        "description": "A custom meta data attribute for the template.",
