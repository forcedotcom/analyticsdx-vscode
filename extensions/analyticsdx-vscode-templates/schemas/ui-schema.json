{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://schemas.salesforce.com/analytics/templates/ui.json",
  "title": "Salesforce Analytics Template User Interface Definition",
  "description": "",
  "type": "object",
  "additionalProperties": false,
  "allowComments": true,
  "required": [],
  "properties": {
    "pages": {
      "type": "array",
      "minItems": 0,
      "description": "Configures the set of pages to show in the template wizrard for gathering the values for variables. The order in this list is the order they will be displayed.",
      "items": {
        "type": "object",
        "required": ["title"],
        "additionalProperties": false,
        "properties": {
          "title": {
            "type": "string",
            "description": "Title to be displayed at the top of the page."
          },
          "condition": {
            "type": "string",
            "description": "A {{...}} condition against Variables. The condition can use && and || to join expressions. If the condition evaluates to true, then the page will display; if the condition evaluates to false, the page will not display.",
            "pattern": "^{{.+}}$",
            "patternErrorMessage": "Must be a valid {{...}} expression.",
            "examples": [
              "{{Variables.stringVariable == 'Yes'}}",
              "{{Variables.booleanVariable == true}}",
              "{{Variables.numberVariable == 5}}",
              "{{Variables.objectVariable.sobjectName == 'X'}}",
              "{{Variables.fieldVariable.fieldName == 'X'}}",
              "{{Variables.stringArray contains 'X'}}",
              "{{Variables.numberArray contains 5}}"
            ]
          },
          "helpUrl": {
            "type": "string",
            "description": "URL provided by template dev to additional content to help user with creating app."
          },
          "vfPage": {
            "type": "object",
            "description": "Specifies that a custom Visualforce page should be used for this set of variables. Make sure the Visualforce page can be accessed by users in the organization with the Manage Analytics Templated Apps user permission.",
            "required": ["name"],
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string",
                "description": "The name of Visualforce class to use.",
                "$comment": "Empty or whitespace-only string is technically valid in the server (to mean no vfPage), but we should warn on it.",
                "minLength": 1,
                "pattern": "[^ \t\r\n\b\f]",
                "patternErrorMessage": "Value must contain at least one non-whitespace character"
              },
              "namespace": {
                "type": "string",
                "description": "The namespace for the Visualforce class."
              }
            },
            "defaultSnippets": [
              {
                "label": "New vfPage",
                "body": {
                  "name": "${1:name}",
                  "namespace": "${2:namespace}"
                }
              }
            ]
          },
          "variables": {
            "type": "array",
            "description": "The variables this page covers. If not using a custom vfPage, the order here is the order the variables' UIs will be presented in the template wizard. If using a custom vfPage, these variables will be passed into the page.",
            "minItems": 0,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["name"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Variable name, must match name of variable defined in variableDefinition file.",
                  "$comment": "The variableDefinition file's fields have to match this regex, so match it here, too.",
                  "pattern": "^[a-zA-Z_][a-zA-Z0-9_]+$"
                },
                "visibility": {
                  "description": "Controls whether the variable should be visible. The value must one of 'Disabled', 'Hidden', or 'Visible', or a {{...}} expression against Variables that evaluates to one of those or true (Visible) or false (Hidden)",
                  "oneOf": [
                    {
                      "type": "string",
                      "pattern": "^{{.+}}$",
                      "patternErrorMessage": "Value must one of 'Disabled', 'Hidden', or 'Visible', or a {{...}} expression.",
                      "examples": [
                        "{{Variables.booleanVariable}}",
                        "{{Variables.booleanVariable ? 'Visible' : 'Disabled'}}",
                        "{{Variables.stringVariable == 'Yes' ? 'Visible' : 'Hidden'}}",
                        "{{Variables.numberVariable == 5 ? 'Visible' : 'Hidden'}}",
                        "{{Variables.stringArray contains 'X' ? 'Visible' : 'Hidden'}}",
                        "{{Variables.numberArray contains 5 ? 'Visible' : 'Hidden'}}"
                      ]
                    },
                    {
                      "type": "string",
                      "default": "Visible",
                      "enum": ["Disabled", "Hidden", "Visible"],
                      "enumDescriptions": [
                        "The variable will show as disabled",
                        "The variable will be hidden.",
                        "The variable will be visible."
                      ]
                    },
                    {
                      "type": "string",
                      "$comment": "json-schema does not support case-insensitive enums, so this simulates it, using a lower-case 1st char to avoid a double schema match.",
                      "pattern": "^(d[Ii][Ss][Aa][Bb][Ll][Ee][Dd]|h[Ii][Dd][Dd][Ee][Nn]|v[Ii][Ss][Ii][Bb][Ll][Ee])$"
                    }
                  ]
                }
              },
              "defaultSnippets": [
                {
                  "label": "New variable",
                  "body": {
                    "name": "${1:name}",
                    "visibility": "${2:Visible}"
                  }
                }
              ]
            },
            "defaultSnippets": [
              {
                "label": "New variables",
                "body": [
                  {
                    "name": "${1:name}",
                    "visibility": "${2:Visible}"
                  }
                ]
              }
            ]
          }
        },
        "defaultSnippets": [
          {
            "label": "New page",
            "body": {
              "title": "${1:Page title}",
              "variables": [
                {
                  "name": "${2:name}",
                  "visibility": "${3:Visible}"
                }
              ]
            }
          }
        ]
      },
      "defaultSnippets": [
        {
          "label": "New pages",
          "body": [
            {
              "title": "${1:Page title}",
              "variables": [
                {
                  "name": "${2:name}",
                  "visibility": "${3:Visible}"
                }
              ]
            }
          ]
        }
      ]
    },
    "displayMessages": {
      "type": "array",
      "description": "A custom display message to show on the application landing page. Currently only supports 1 display message.",
      "minItems": 0,
      "maxItems": 1,
      "items": {
        "type": "object",
        "required": ["text", "location"],
        "additionalProperties": false,
        "properties": {
          "text": {
            "type": "string",
            "description": "Text to display on the app creation landing page"
          },
          "location": {
            "type": "string",
            "enum": ["AppLandingPage"],
            "description": "Location to display the text, currently only 'AppLandingPage' is supported."
          }
        },
        "defaultSnippets": [
          {
            "label": "New displayMessage",
            "body": {
              "text": "$0",
              "location": "AppLandingPage"
            }
          }
        ]
      },
      "defaultSnippets": [
        {
          "label": "New displayMessages",
          "body": [
            {
              "text": "$0",
              "location": "AppLandingPage"
            }
          ]
        }
      ]
    }
  }
}
