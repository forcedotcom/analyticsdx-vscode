{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "sourceMap": true,
    "declaration": true,
    // need this for fuse.js to work right
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "rootDir": ".",
    "outDir": "out",
    "preserveConstEnums": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "out"]
}
